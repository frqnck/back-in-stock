<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Customer\Block\Account\SortLinkInterface" ifconfig="back_in_stock/general/enabled" name="customer-account-navigation-back-in-stock-link">
                <arguments>
                    <argument name="path" xsi:type="string">backinstock/notification</argument>
                    <argument name="label" xsi:type="string" translate="true">My Back In Stock Notifications</argument>
                    <argument name="sortOrder" xsi:type="number">100</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
